		cout<<endl;
		cout<<"Ingrese una opcion: ";
		cin>>Opcion;
		
		switch (Opcion)
		{
		   case 1 :
		    {
			   cout<<"Estas en el menu de cafe y granitas "<<endl;
			   system("pause");
		    }
		
		   case 2 :
	        {
		    	cout<<"Estas en el menu de reposteria "<<endl;
	    		system ("pause");
	    	}
		
    	   case 3 :
	    	{
		    	break;
	    	}
	    	
	    	default:
	    	{
	    		cout<<"Ingrese una opcion valida (1, 2, 3)"<<endl;
