#include <iostream>

using namespace std;

int main (int argc, char const *argv [])

{
	
	int Numeros_Pares = 0, Numeros_Impares = 0;
	int Total_Pares = 0;
	int Suma = 0;
	
	cout<<"Suma de Numeros de 1 hasta 10"<<endl;
	
	for (Numeros_Pares = 0; Numeros_Pares <= 10; Numeros_Pares ++ )
	{
		if (Numeros_Pares % 2 == 0)
		{
			Total_Pares = Numeros_Pares + Total_Pares;
		}
		
	}
	cout<<"La suma de numeros pares es : "<<Total_Pares;
	
	return 0;

}
