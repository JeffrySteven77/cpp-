#include <iostream>

using namespace std;
// en "CLASS" creamos el objeto "gato"
class gato {
     public:
     string Nombre;
     string Pelo = "Amarillo";
     
     /*seguido se inicializan los constructores
     es como agregar cualidades al objeto*/

     gato(){                       // Construcor asigna valores por omicion al objeto
          Nombre = "Mincho";
          Pelo = "Negro";

     }
     gato (string OtroNombre, string OtroPelo){  //constructor para asignar otros valores
          Nombre = OtroNombre;
          Pelo = OtroPelo;

     }
    
};

int main()
{
    gato PrimerGato;
    gato SegundoGato("","");
    gato TercerGato("Ocho","");


     return 0;
}
